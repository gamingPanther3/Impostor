<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/black">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical|center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Impostor"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:paddingTop="30dp"
            android:textSize="45dp"
            android:textColor="@color/white"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="by Max Lemberg"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wie viel Spieler spielen mit?"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30dp"
                android:paddingTop="50dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/editTextNumberPlayers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Anzahl der Spieler"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:textSize="30dp"
                android:digits="0123456789"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Wie viel Spieler sollen Impostor sein?"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30dp"
                android:paddingTop="30dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/editTextNumberImpostor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Anzahl der Impostor"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:paddingTop="15dp"
                android:textSize="30dp"
                android:digits="0123456789"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WÃ¤hle eine Kategorie aus"
                android:layout_gravity="center"
                android:textAlignment="center"
                android:textSize="30dp"
                android:paddingTop="30dp"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Spinner
            android:id="@+id/chooseCategory"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="25dp"
            android:gravity="center_horizontal"
            android:textAlignment="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wie lange wird gespielt?"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="30dp"
            android:paddingTop="30dp"
            android:textColor="@color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <EditText
                android:id="@+id/editTextMinute"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:digits="0123456789"
                android:hint="Minuten"/>

            <EditText
                android:id="@+id/editTextSecond"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:digits="0123456789"
                android:hint="Sekunden"/>
        </LinearLayout>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/continueButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Weiter"
            android:background="@color/black"
            android:layout_marginTop="35dp"
            android:textSize="25dp"
            android:textColor="@color/white" />
    </LinearLayout>
</ScrollView>